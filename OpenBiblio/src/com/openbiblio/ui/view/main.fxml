<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.openbiblio.ui.controller.MainController"
            styleClass="root">

    <left>
        <VBox spacing="12" styleClass="panel">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <Label text="Tu biblioteca" styleClass="pill-title"/>
            <FlowPane fx:id="libraryPane" hgap="16" vgap="16"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="addButton" text="AÑADIR +" onAction="#onAddClicked"/>
            <Button text="IMPORTAR" onAction="#onImportClicked"/>
            <Button text="EXPORTAR" onAction="#onExportClicked"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="18">
            <padding>
                <Insets top="22" right="22" bottom="22" left="22"/>
            </padding>

            <HBox spacing="30">
                <VBox spacing="6">
                    <Label text="MiBiblioteca" styleClass="brand"/>
                    <Label text="Para los mejores lectores." styleClass="subtitle"/>
                </VBox>
                <Label styleClass="intro"
                       wrapText="true"
                       text="Gestiona tu biblioteca personal: añade libros, marca los que has leído, escribe notas y exporta tu colección."/>
            </HBox>

            <VBox spacing="8">
                <Label text="Buscar libros" styleClass="section-title"/>
                <TextField fx:id="searchField" styleClass="search"/>
            </VBox>

            <ScrollPane fitToWidth="true">
                <content>
                    <FlowPane fx:id="recommendationsPane" hgap="18" vgap="18"/>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>